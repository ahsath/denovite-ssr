{
  "tasks": {
    "server:dev": "NODE_ENV=development deno run -A server/server.ts",
    "server:prod": {
      "description": "Run the server in production mode",
      "command": "NODE_ENV=production deno run -A server/server.ts",
      "dependencies": ["build:server"]
    },
    "build:client": "deno run -A npm:vite@^6.3.3 build --config client/vite.config.ts --manifest",
    "build:server": {
      "description": "Build the server-side code",
      "command": "deno run -A npm:vite@^6.3.3 build --ssr src/entry-server.ts --outDir ../dist/server --config client/vite.config.ts",
      "dependencies": ["build:client"]
    }
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.9",
    "@types/express": "npm:@types/express@^5.0.1",
    "@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@^5.2.3",
    "@vue/tsconfig": "npm:@vue/tsconfig@^0.7.0",
    "express": "npm:express@^5.1.0",
    "vite": "npm:vite@^6.3.3",
    "vite-plugin-vue-devtools": "npm:vite-plugin-vue-devtools@^7.7.6",
    "vue": "npm:vue@^3.5.13",
    "vue-tsc": "npm:vue-tsc@^2.2.10",
    "path": "node:path",
    "@vue/server-renderer": "npm:@vue/server-renderer@^3.5.13",
    "liquidjs": "npm:liquidjs@^10.21.0"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "types": ["@types/express"],
    "lib": ["deno.ns", "dom", "dom.iterable", "esnext"]
  }
}
