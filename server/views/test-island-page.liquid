<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Island Page</title>
    {% if prod and manifest %}
      {% assign entry = manifest['src/assets/main.css'] %}
      {% if entry.file %}
          <link rel="stylesheet" href="/{{ entry.file }}" />
      {% endif %}
      {% for module in modules %}
        {% assign entry = manifest[module] %}
        {% if entry and entry.file %}
          {% if entry.css %}
            {% for css in entry.css %}
              <link rel="stylesheet" href="/{{ css }}" />
            {% endfor %}
          {% endif %}
          <link rel="modulepreload" as="script" crossorigin href="/{{ entry.file }}" />
        {% endif %}
      {% endfor %}
    {% else %}
      <link rel="stylesheet" href="/client/src/assets/main.css" />
    {% endif %}
</head>
<body>
    <h1>Storefront Page with Island</h1>

    {{ html }}

    <p class="text-red-500">Some static content below the island.</p>

    {% if prod and manifest %}
      <script type="module" src="/{{ manifest['src/entry-client.ts'].file }}"></script>
    {% else %}
      <script type="module" src="/client/src/entry-client.ts"></script>
    {% endif %}
</body>
</html>