<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vue.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    {% if prod and manifest %}
      {% assign entry = manifest['src/assets/main.css'] %}
      {% if entry.file %}
          <link rel="stylesheet" href="/{{ entry.file }}" />
      {% endif %}
      {% assign entry = manifest['src/entry-admin.ts'] %}
      {% if entry.css %}
        {% for css in entry.css %}
          <link rel="stylesheet" href="/{{ css }}" />
        {% endfor %}
      {% endif %}
    {% else %}
      <link rel="stylesheet" href="/client/src/assets/main.css" />
    {% endif %}
  </head>
  <body>
    <div id="app"></div>
    {% if prod and manifest %}
      <script type="module" src="/{{ manifest['src/entry-admin.ts'].file }}"></script>
    {% else %}
      <script type="module" src="/client/src/entry-admin.ts"></script>
    {% endif %}
  </body>
</html>
